    <body>
        <a href="/listaInvitados"><button id="filtroConfirmados" class="confirm btn-confirmados">Lista Completa</button></a>
             <section class="bg-black">
                <div class="container px-4 px-lg-5 text-black-50">
                    <table id="lista">
                        <tr id="titulosLista">
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Dirección</th>
                            <th>Localidad</th>
                            <th>Celular</th>
                            <th>Documento</th>
                            <th>Edad</th>
                            <th>Silla</th>
                            <th>Vacuna</th>
                            <th>Menú</th>
                            <th>confirmación</th>
                        </tr>
                        <% for (let invitado of listaDeInvitados) { %>
                            <%    if (invitado.confirma == "si") { %>
                        <tr>
                            <td><%=invitado.nombre%></td>
                            <td><%=invitado.apellido%></td>
                            <td><%=invitado.dire%></td>
                            <td><%=invitado.localidad%></td>
                            <td><%=invitado.celular%></td>
                            <td><%=invitado.documento%></td>
                            <td><%=invitado.edad%></td>
                            <td><%=invitado.silla%></td>
                            <td><%=invitado.vacuna%></td>
                            <td><%=invitado.menu%></td>
                            <td><%=invitado.confirma%></td>
                        </tr>
                        <% } } %> 
                    </table>
                </div>
            </section>
